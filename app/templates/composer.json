{
  "name": "crakmedia/<%= componentId %>-component",
  "description": "Enter here a short description of the component",
  "license": "proprietary",
  "require": {
    "php": "~5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.1"
  },
  "autoload": {
    "psr-4": {
      "Crak\\Component\\<%= componentName %>\\": "src/",
      "Crak\\Component\\<%= componentName %>\\Mock\\": "test/Mock"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Crak\\Component\\<%= componentName %>\\Test\\": "test/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://packagist.crakmedia.lan:1280"
    }
  ],
  "authors": [
    {
      "name": "<%= authorName %>",
      "email": "<%= authorEmail %>"
    }
  ]
}
